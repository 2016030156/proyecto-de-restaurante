<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gerentes.NuevoUsuarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#CDDC39"
        android:gravity="center">

        <TextView
            android:id="@+id/lblTituloNuevoUsuario"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Nuevo Usuario"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Usuario:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtUsuarioNuevoUsuario"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Ingresa el usuario"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nombre:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtNombreNuevoUsuario"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Ingresa el Nombre"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Apellido paterno:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtPaternoNuevoUsuario"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Escribe el apellido paterno"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Apellido materno:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtMaternoNuevoUsuario"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Escribe el apellido materno"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Contrase単a:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtContrasenaNuevoUsuario"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Escribe la contrase単a"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Confirmar contrase単a:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtConfirmarContrasenaNuevoUsuario"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Confirma la contrase単a"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="298dp"
            android:layout_height="17dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnAceptarNuevoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="ACEPTAR"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnRegresarNuevoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="Regresar"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>